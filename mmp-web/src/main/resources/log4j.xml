<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%n%-5p:%m %n %X{client}:%X{controller}.%X{action}==> %l%n"/>-->
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}:%5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="trace_file" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${catalina.home}/logs/tracer.log"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p [%c] - %m%n"/>
        </layout>
    </appender>

    <logger name="tracer" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="trace_file"/>
    </logger>

    <logger name="org.apache">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="org.apache.ibatis">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="org.mybatis.spring">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="java.sql">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="java.sql.Connection">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="java.sql.Statement">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="java.sql.PreparedStatement">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="org.springframework">
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="net.rubyeye">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="com.google">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="org.dozer">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="com.alibaba.druid">
        <level value="ERROR"/>
        <appender-ref ref="stdout"/>
    </logger>


    <root>
        <level value="INFO"/>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>